.side_bar
  .side_bar__user
    .side_bar__user__utilities
      .side_bar__user__utilities__user_name
        = current_user.name
      .side_bar__user__utilities__icons
        -# .side_bar__user__utilities__icons__icon1
        = link_to new_group_path, class: "btn" do
          %i.fa.fa-edit
        =link_to edit_user_path(current_user), class: "btn" do
          %i.fa.fa-cog

  .side_bar__groups 
    - current_user.groups.each do |group|  
      .side_bar__groups__group
        = link_to group_messages_path(group), class: 'group_link' do
          .side_bar__groups__group__group_name
            = group.name
          .side_bar__groups__group__group_message
            だれも　あいてにして　くれないお
